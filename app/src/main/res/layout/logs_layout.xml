<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.XSmile2008.helloworldandroid.app.activity.LogsActivity">

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:id="@+id/buttonLogInfo"
            android:onClick="onLogInfoClick"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:id="@+id/buttonLogError"
            android:onClick="onLogErrorClick"
            android:layout_below="@+id/buttonLogInfo"
            android:layout_alignLeft="@+id/buttonLogInfo"
            android:layout_alignStart="@+id/buttonLogInfo"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warning"
            android:id="@+id/buttonLogWarning"
            android:onClick="onLogWarningClick"
            android:layout_below="@+id/buttonLogError"
            android:layout_alignLeft="@+id/buttonLogError"
            android:layout_alignStart="@+id/buttonLogError"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug"
            android:id="@+id/buttonLogDebug"
            android:onClick="onLogDebugClick"
            android:layout_below="@+id/buttonLogWarning"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
